    "decision_rules": [
        {
            "rule_id": "VN_RESIDENCY_183_DAY_TEST",
            "effective_from": "2007-11-21",
            "effective_to": null,
            "inputs": [
                {
                    "name": "days_present_in_vn_in_tax_year",
                    "type": "integer",
                    "required": true
                },
                {
                    "name": "days_present_in_vn_in_12_consecutive_months_from_first_entry",
                    "type": "integer",
                    "required": false
                }
            ],
            "outputs": [
                {
                    "name": "residency_status",
                    "type": "enum",
                    "values": [
                        "resident",
                        "non_resident",
                        "unknown"
                    ]
                }
            ],
            "logic": "IF days_present_in_vn_in_tax_year >= 183 OR days_present_in_vn_in_12_consecutive_months_from_first_entry >= 183 THEN resident ELSE non_resident",
            "notes": "This is the minimal residency test your UI can implement first; add permanent residence / 183-day lease logic as a v2 rule once you pin exact legal text + evidence requirements.",
            "source_refs": [
                {
                    "title": "Professional summaries (resident worldwide vs non-resident VN-sourced) referencing residency criteria",
                    "ref": "turn0search26"
                }
            ]
        },
        {
            "rule_id": "WITHHOLDING_10_PERCENT_NO_CONTRACT_OR_LT_3_MONTHS_PAYMENT_GE_2M",
            "effective_from": "2013-08-15",
            "effective_to": null,
            "inputs": [
                {
                    "name": "has_labor_contract",
                    "type": "boolean",
                    "required": true
                },
                {
                    "name": "labor_contract_duration_months",
                    "type": "number",
                    "required": false
                },
                {
                    "name": "payment_amount_vnd_per_time",
                    "type": "integer",
                    "required": true
                }
            ],
            "outputs": [
                {
                    "name": "withhold_pit",
                    "type": "boolean"
                },
                {
                    "name": "withholding_rate",
                    "type": "number"
                }
            ],
            "logic": "IF (has_labor_contract == false OR labor_contract_duration_months < 3) AND payment_amount_vnd_per_time >= 2000000 THEN withhold_pit=true; withholding_rate=0.10 ELSE withhold_pit=false; withholding_rate=0",
            "notes": "In later versions, add the commitment/undertaking exception workflow (Form 08/CK-TNCN) as a guided UX path.",
            "source_refs": [
                {
                    "title": "Crowe Vietnam Q&A quoting Circular 111/2013/TT-BTC Art. 25 point 1.i (10% withholding ≥2m VND/time)",
                    "ref": "turn0search24"
                }
            ]
        }
