    "glossary": [
        {
            "term": "Assessable income (monthly)",
            "definition": "Income subject to PIT after removing exempt items and applying eligible deductions, used to apply the progressive tax table.",
            "notes": "Your UI should label this clearly; users often confuse gross vs taxable vs assessable."
        },
        {
            "term": "Tax resident",
            "definition": "An individual present in Vietnam for 183 days or more within a calendar year or within 12 consecutive months from first entry, subject to worldwide income taxation.",
            "notes": "Non-residents are only taxed on Vietnam-sourced income."
        },
        {
            "term": "Family circumstance deduction",
            "definition": "Personal deductions for the taxpayer and registered dependents that reduce assessable income before applying progressive rates.",
            "notes": "Updated to 15.5M/6.2M VND from January 1, 2026."
        },
        {
            "term": "Withholding",
            "definition": "Tax deducted at source by the payer before payment is made to the recipient.",
            "notes": "10% withholding applies to payments ≥2M VND to individuals without labor contract."
        }
    ],
